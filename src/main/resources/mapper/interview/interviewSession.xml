<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.interviewgo.mapper.interview.InterviewSessionMapper">
	<!-- 인터뷰 설정 Table -->
	<insert id="insertInterviewSession" parameterType="interviewSession">
		INSERT INTO interview_session(iv_ssid, mb_uid)
		VALUES(
			#{iv_ssid},
			#{mb_uid}
		)
	</insert>
	
	<select id="selectInterviewSession" resultType="interviewSession" parameterType="String">
		SELECT COUNT(*) FROM interview_session WHERE iv_ssid = #{iv_ssid}
	</select>
	
	<delete id="deleteInterviewSession" parameterType="String">
		DELETE interview_session WHERE iv_ssid = #{iv_ssid}
	</delete>
</mapper>